<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brighten_main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#4381A6"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/ll_prev_device_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!--      <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/return2" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:drawableLeft="@drawable/brighten_main_arrows"
                android:drawablePadding="15dp"
                android:text="智慧云照明"
                android:textColor="#FFFFFF"
                android:textSize="26dp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_device_main_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_deviceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备号：0"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <!--      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/refresh2" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:drawableLeft="@drawable/refresh2"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="刷新"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_spacing_start_time1"
        android:layout_below="@id/top"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/brighten_main_title_bg"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="系统时间"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="2018-06-19 16:12:27"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/single_light_setting_device_title_bg"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/single_light_setting_parametext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="电箱参数"
                android:textColor="@android:color/white" />

            <TextView
                style="@style/single_light_setting_parametext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电箱电压"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView2"
                style="@style/single_light_setting_parametext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电箱电流"
                android:textColor="@android:color/white" />


            <TextView
                style="@style/single_light_setting_parametext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电箱状态"
                android:textColor="@android:color/white" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/brighten_main_title_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EFEFEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_electric_parameter1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView3"
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实时功率: " />

                            <TextView
                                android:id="@+id/txt_psum"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/ll_electric_parameter1"
                            android:layout_weight="1"
                            android:background="@drawable/single_light_setting_device_parameter_bg"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|left"
                                android:text="累计耗能: " />

                            <TextView
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_electric_parameter2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/ll_electric_parameter1"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView4"
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|left"
                                android:text="累计节能: " />

                            <TextView
                                android:id="@+id/txt_energy"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll_electric_parameter2"
                            android:gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView5"
                                style="@style/main_list_item_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="功率 " />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EFEFEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_electric_parameter4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电压 A: " />

                            <TextView
                                android:id="@+id/txt_volt"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_electric_parameter5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/ll_electric_parameter4"
                            android:layout_weight="1"
                            android:background="@drawable/single_light_setting_device_parameter_bg"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电压 B: " />

                            <TextView
                                android:id="@+id/txt_Bvolt"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/ll_electric_parameter5"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电压 C: " />

                            <TextView
                                android:id="@+id/txt_Cvolt"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#EFEFEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_electric_parameter7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电流A:" />

                            <TextView
                                android:id="@+id/txt_ampere"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_electric_parameter8"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/ll_electric_parameter7"
                            android:layout_weight="1"
                            android:background="@drawable/single_light_setting_device_parameter_bg"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电流B:" />

                            <TextView
                                android:id="@+id/txt_ampereb"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/ll_electric_parameter8"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/single_light_setting_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电流C:" />

                            <TextView
                                android:id="@+id/txt_amperec"
                                style="@style/single_light_setting_device_param_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ???" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/single_light_setting_param_text"
                    style="@style/single_light_setting_param_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="运行正常" />

                <TextView
                    style="@style/single_light_setting_param_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/single_light_setting_device_parameter_bg"
                    android:gravity="center"
                    android:text="运行正常" />

                <TextView
                    style="@style/single_light_setting_param_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="运行正常" />


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rly_primary_timing"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/brighten_main_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:text="单灯定时"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/brighten_main_menu"></ImageView>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_calibrate_time_server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_brighten_main_set_selector"
            android:text="校         时"
            android:textColor="#FEFEFE"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_spacing_start_time1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/brighten_main_title_bg"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="单灯控制"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/brighten_main_menu"></ImageView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="景观灯"
                    android:textSize="10sp" />
            </LinearLayout>

            <com.ldsight.View.DrawableHorizontalButton
                android:id="@+id/bt_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_brighten_main_set_selector"
                android:drawableLeft="@drawable/brighten_main_btn_set_ico"
                android:text="设       置" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>