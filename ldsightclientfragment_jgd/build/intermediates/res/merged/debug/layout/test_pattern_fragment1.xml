<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/list_item_shape"
        android:orientation="vertical"
        android:padding="8dp" >

        <ListView
            android:id="@+id/test_pattern_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="8dp" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_test_pattern_fragment_select_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/test_pattern_list_item_id_shape"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="全选"
                android:textColor="@drawable/btn_test_pattern_selector"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test_pattern_fragment_invert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/test_pattern_list_item_id_shape"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="反选"
                android:textColor="@drawable/btn_test_pattern_selector"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_test_pattern_fragment_up"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/test_pattern_list_item_id_shape"
                        android:text="100%"
                        android:textColor="@drawable/btn_test_pattern_selector" />

                    <Button
                        android:id="@+id/btn_test_pattern_fragment_75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/test_pattern_list_item_id_shape"
                        android:text="75%"
                        android:textColor="@drawable/btn_test_pattern_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_test_pattern_fragment_50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/test_pattern_list_item_id_shape"
                        android:text="50%"
                        android:textColor="@drawable/btn_test_pattern_selector" />

                    <Button
                        android:id="@+id/btn_test_pattern_fragment_25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/test_pattern_list_item_id_shape"
                        android:text="25%"
                        android:textColor="@drawable/btn_test_pattern_selector" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_test_pattern_fragment_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/close_light"
                android:text="关灯" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>