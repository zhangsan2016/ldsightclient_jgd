<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="62dp"
        android:background="@drawable/single_light_control_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_minus"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:text="-" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="60sp" />

            <Button
                android:id="@+id/bt_add"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:text="+" />

            <Button
                android:id="@+id/bt_check"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:text="查询" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/single_light_control_shape"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/single_light_control_start_lamp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:text="开灯" />

        <Button
            android:id="@+id/single_light_control_stop_lamp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="关灯" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/single_light_control_shape"
        android:text="亮度调节"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/single_light_control_shape"
        android:gravity="center"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/sb_single_light_brightness"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_single_light_percentage"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="0 % "
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_brightness_control"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:text="调节" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="62dp"
        android:background="@drawable/single_light_control_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设备号"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_volt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="电压"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ampere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="电流"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="功率"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_pf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="pf值"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>